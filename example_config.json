{
  "measurements": [
    {
      "name": "purchase",
      "aggregations": [
        {
          "query": "from:example.com newer_than:7d",
          "rules": [
            {
              "type": "regexp",
              "target": "body",
              "pattern": "合計.*\\ (?P<amount>\\d+)",
              "mappings": {
                "amount": {
                  "type": "field",
                  "dataType": "integer"
                }
              }
            }
          ],
          "tags": {
            "shop": "example"
          }
        }
      ]
    }
  ],
  "influxdb": {
    "serverUrl": "http://localhost:8086",
    "org": "example-org",
    "bucket": "gmailagg"
  }
}
